{
  "name": "Route Template",
  "description": "What does this route do?",
  "route": "/example/route/:routeParam",
  "method": "POST",
  "validate": {
    "query": null,
    "params": {
      "param": {
        "type": "string",
        "required": true,
        "min": 3,
        "max": 6,
        "pattern": "/[a-z]/i"
      }
    },
    "payload": {
      "type": "object",
      "required": "true",
      "attributes": [
        {
          "key": "id",
          "type": "DecentSearch.ID",
          "required": true
        }
      ]
    }
  }
}
